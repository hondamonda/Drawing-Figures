package darik;

import java.util.Scanner;

public class Darik {
	   
	   public static void main(String[] args) {
		   
		     Scanner scan = new Scanner(System.in);
			 int n = Integer.parseInt(scan.nextLine());
			 scan.close();

			 System.out.println(stringCreator(".", n + 1) +
					            stringCreator("_", 2*n + 1) +
					            stringCreator(".", n + 1));
		   
			 int b = -2;
			 for (int i = n; i > 0; i--) {
				System.out.println(stringCreator(".", i) +
						                "//" +
					               stringCreator("_", 2*n + 1 + b) +
					                   "\\\\"+
					               stringCreator(".", i));
				b += 2;
			}
			 System.out.println("//" + 
			                    stringCreator("_", ((2*n + 1 + b)-5)/2) +
			                           "STOP!" +
			                    stringCreator("_", ((2*n + 1 + b)-5)/2) +
			                           "\\\\");
			 for (int i = 0; i < n; i++) {
				System.out.println(stringCreator(".", i) +
						               "\\\\" +
						           stringCreator("_", 2*n + 1 + b) +
						               "//" +
						           stringCreator(".", i));
				b -= 2;
				}
			 
	}

	private static String stringCreator(String string, int a) {
		
		String str = new String(new char[a]).replace("\0", string);
		return str;
	}
}
